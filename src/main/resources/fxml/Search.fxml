<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #FCF6FF;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controller.SearchController">
   <children>
      <ImageView fx:id="imageView" fitHeight="250.0" fitWidth="250.0" layoutX="100.0" layoutY="41.0" pickOnBounds="true" preserveRatio="true" />
      <Button layoutX="165.0" layoutY="314.0" mnemonicParsing="false" onAction="#selectImage" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #9900cc;" text="Select Image" textAlignment="CENTER" textFill="WHITE">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <ListView fx:id="directoryList" layoutX="430.0" layoutY="41.0" prefHeight="250.0" prefWidth="250.0" />
      <Button layoutX="495.0" layoutY="314.0" mnemonicParsing="false" onAction="#selectDirectory" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #9900cc;" text="Select Directory" textAlignment="CENTER" textFill="WHITE">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <ColorPicker fx:id="colorPicker" layoutX="100.0" layoutY="460.0" onAction="#selectColors" />
      <Label layoutX="100.0" layoutY="434.0" text="Choose Colors : " />
      <DatePicker fx:id="datePicker" layoutX="283.0" layoutY="461.0" onAction="#selectDate" promptText="Enter a date" />
      <Label layoutX="283.0" layoutY="434.0" text="Choose Date : " />
      <TextField fx:id="widthField" layoutX="497.0" layoutY="461.0" onAction="#selectWidth" prefHeight="26.0" prefWidth="78.0" />
      <TextField fx:id="heightField" layoutX="601.0" layoutY="461.0" onAction="#selectHeight" prefHeight="26.0" prefWidth="78.0" />
      <Label layoutX="497.0" layoutY="434.0" text="Width :" />
      <Label layoutX="601.0" layoutY="434.0" text="Height :" />
      <Button layoutX="666.0" layoutY="546.0" mnemonicParsing="false" onAction="#submit" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #005757;" text="Submit" textAlignment="CENTER" textFill="WHITE">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
</AnchorPane>
